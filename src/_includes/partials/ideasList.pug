                if idea.data.featuredImage == "/images/uploads/transparent.png"
                    .card__image.bg-boiler(data-title=idea.data.title)
                        img(src=idea.data.featuredImage, alt=title)
                else 
                    .card__image
                        img(src=idea.data.featuredImage, alt=title)

                .card__body.flex.fd-c.padding-m.fg-1
