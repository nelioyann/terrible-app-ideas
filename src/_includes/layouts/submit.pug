doctype html
html(lang="en")
    include ../partials/head.pug
    include ../partials/body.pug
        include ../partials/header.pug
        main.barba-container(data-barba="container" data-barba-namespace=title)
            h1 #{title}
            p #{description}
            form(name="ideas", netlify)
                fieldset.animate-fade-up
                    legend General Info
                    .responsive-grid-m.gap
                        label.flex.fd-c(for="subject")
                            span Subject
                            input#subject.borderius.shadow(type="text", name="subject", required)
                        label.flex.fd-c(for="subject")
                            span Username
                            input.shadow#user.borderius(type="text", name="user")
                fieldset.margin-y.margin-m.animate-fade-up
                    legend Project Details
                    label.flex.fd-c(for="subject")
                        span Description
                        textarea.shadow.borderius#description(name="description", rows="10", required) 
                    
                button.animate-fade-up.btn.btn-secondary.margin-m.margin-y.borderius(type="submit") Submit
        include ../partials/footer.pug
    include ../partials/scripts.pug
    